{% extends 'SitewebFrontBundle::layout.html.twig' %}

{% block content %}


    <ul class="side-menu">
      <li><a>Login</a></li>
    </ul>



    <main class="content">
        <div class="auto-alerts">
            {% if error %}
                <div class="error">
                    <div>{{ error|trans({}, 'FOSUserBundle') }}</div>
                </div>
            {% endif %}
        </div>
        <header class="content-header">
            <h1>Members Login</h1>
            <div class="clearfix"></div>
            <hr class="book-header">
            <div class="font-size-control" style="display:none;">
                <a class="smaller">-</a>
                <p>A<span>A</span></p>
                <a class="bigger">+</a>
            </div>
            <div class="clearfix"></div>
        </header>
        <div class="clearfix"></div>
        <form action='{{ url("fos_user_security_check") }}' method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

            <section class="login-signup">
                <header>
                    <h1>Not a Member? SIGN UP NOW!</h1>
                </header>
                <a class="btn_purple" href="{{ path('fos_user_registration_register') }}">Become a Member</a>
            </section>
            <section class="login-login">
                <header>
                    <h1>Member Login</h1>
                    <h2><span>NOTE:</span> You can use your <span>2015 UCLA H3 / BGRG Summit</span> login!</h2>
                </header>
                    <div class="form-group w460">
                        <label for="emailLogin" class="w100">Email:</label>
                        <input class="w255" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group w512">
                        <label for="passwordLogin" class="w100">Password:</label>
                        <input type="password" class="w255" id="password" name="_password" required="required" />
                    </div>
                    <div class="clearfix"></div>
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
                    <div class="clearfix"></div>
                    <input class="btn-submit btn_purple" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
                </form>
            </section>
            <div class="clearfix"></div>
    </main>


{%endblock%}
