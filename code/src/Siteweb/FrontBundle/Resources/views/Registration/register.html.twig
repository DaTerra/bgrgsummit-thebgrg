                        <div class="clearfix"></div>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </article>
    </section>
    <section>
        <div class="ms_total">
            <p>Corporate Membership - 1 Year:<span>$7,5000</span></p>
        </div>
    </section>
    <section>
