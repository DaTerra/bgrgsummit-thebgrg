
<div class="page-content">

    <div style="color:red">{{form_errors(form)}}</div>
    {{ form_start(form) }}

    <div class="panel panel-default">
        <div class="popup-header"><span class="text-semibold">User Registration</span>

        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group has-feedback">
                        {{ form_label(form.username) }}
                        {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'Username'} }) }}

                        <i class="icon-users form-control-feedback"></i>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group has-feedback">
                        {{ form_label(form.email) }}
                        {{ form_widget(form.email,{'attr':{'class':'form-control required','placeholder':'your@email.com'} }) }}
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group has-feedback">
                        {{ form_label(form.Roles) }}:
                        {{ form_widget(form.Roles,{'attr':{'class':'form-control','height':'auto'} }) }}
                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="row">
                    <div class="col-sm-4">
                        <div class="form-group has-feedback">
                            {{ form_label(form.plainPassword.first) }}
                            {{ form_widget(form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'Password'} }) }}
                            <i class="icon-lock form-control-feedback"></i></div></div>

                    <div class="col-sm-4">
                        <div class="form-group has-feedback">
                            {{ form_label(form.plainPassword.second) }}
                            {{ form_widget(form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'Password'} }) }}
                            <i class="icon-lock form-control-feedback"></i></div></div>

                </div>
            </div>

            <button type="submit" class="btn btn-warning pull-right"><i class="icon-menu2"></i> Add User </button>
        </div>
    </div>

    {{ form_widget(form._token)}}
</form>

</div>





























