<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title"><i class="icon-accessibility"></i> Abstract Details</h4>
</div>
<div class="modal-body with-padding">
    <div class="row">
        {{ form_start(form) }}

        <div class="form-group">
            <div class="row">
                <div class="col-sm-4"><label>{{ form_label(form.created) }}</label></div>
                <div class="col-sm-8">{{ form_widget(form.created,{'attr':{'class':'form-control'} }) }}</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6"><label>{{ form_label(form.activated) }}</label></div>
                <div class="col-sm-6">{{ form_widget(form.activated,{'attr':{'class':'form-control'} }) }}</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6"><label>{{ form_label(form.expiration) }}</label></div>
                <div class="col-sm-6">{{ form_widget(form.expiration,{'attr':{'class':'form-control'} }) }}</div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-6"><label>{{ form_label(form.status) }}</label></div>
                <div class="col-sm-6">{{ form_widget(form.status,{'attr':{'class':'form-control'} }) }}</div>
            </div>
        </div>

        {{ form_widget(form._token) }}
        <div class="col-sm-6">{{ form_widget(form.submit,{'attr':{'class':'btn btn-success'} }) }}</div>

        </form>
    </div>


</div>
<div class="modal-footer">
    <button class="btn btn-warning" data-dismiss="modal">Close</button>
</div>