{% extends 'SitewebFrontBundle::layout.html.twig' %}
{% block content %}
    <div class="page-top">
        <h1 class="page-title btn-yellow-124">Abstract Submission</h1>
        <p></p>
    </div>
    <div class="main-left">
        <h3 class="titley">Contact-Us</h3>
        <br/>

        <p><span class="field-required required-helper">*Required fields</span></p>
        <div class="clearfix"></div>
        {{ form_errors(form) }}
       {{ form_start(form) }}
            <div class="section-0">
                <div class="form-group-326">
                    <label for="SubmitterName" class="label-105">Name<span class="field-required">*</span></label>
                    {{ form_widget(form.name,{'attr':{'class':'input-200 input-yellow' } }) }}
                </div>
                <div class="form-group-326">
                    <label for="SubmitterEmail" class="label-92-pad">Email<span class="field-required">*</span></label>
                    {{ form_widget(form.email,{'attr':{'class':'input-200 input-yellow' } }) }}
                </div>
                <div class="clearfix"></div>
                <div class="form-group-326">
                    <label for="FirstAuthorName" class="label-105">Phone<span class="field-required">*</span></label>
                    {{ form_widget(form.phone,{'attr':{'class':'input-200 input-yellow' } }) }}
                </div>
                <div class="form-group-326">
                    <label for="FirstAuthorName" class="label-92-pad">Subject<span class="field-required">*</span></label>
                    {{ form_widget(form.subject,{'attr':{'class':'input-200 input-yellow' } }) }}
                </div>
                <div class="clearfix"></div>
            </div>

            <div class="section-1">
                <p class="title-15 center">Message</p>
                <div class="pad20-45">
                    {{ form_widget(form.message,{'attr':{'class':'text-555 MyTitleBox','rows':"6" } }) }}
                </div>
                <div class="clearfix"></div>
            </div>
        {{ form_widget(form._token) }}
        <input type="submit" class="btn-red-146 btn-submit" value="Submit Registration" />

        </form>
    </div>

{%endblock%}