{% extends 'SitewebFrontBundle::layout.html.twig' %}
{% block content %}
    <div class="page-top">
        <h1 class="page-title btn-yellow-124">My Meeting Proposal</h1>
        <p></p>
    </div>
    <div class="main-left">

        <h3 class="titley">Accepted Proposal</h3>
        <br/>
        <div class="section-0">
            <div class="form-group-326">
                <table>
                    <tr>
                        <th>ID</th>
                        <th>Proposer</th>
                        <th>Invitee</th>
                        <th>Location</th>
                        <th>Time</th>
                        <th>Status</th>
                    </tr>

                    {% for meeting in accepteddmeetings1 %}
                        <tr>
                            <td>{{ meeting.id }}</td>
