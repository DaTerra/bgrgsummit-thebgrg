                            <td>{{ meeting.time }}</td>
                            <td>{{ meeting.status }}</td>
                            <td>
                                <a href="" >Accept</a>
                                <a href="{{ path('summit_meeting_refuse',{'id':meeting.id}) }}" >Deny</a>
                                <a href="{{ path('proposeanother',{'id':meeting.id}) }}" >Propose another time</a>
                            </td>
