   <div class="page-top">
        <h1 class="page-title btn-yellow-124">Reset Password</h1>        
    </div>


    <main class="signin">
        <section class="highlights">
            <header>
                <h1>The UCLA H3 / BGRG SUMMIT is open for registration !</h1>
            </header>
            <a class="banner br333" href="{{ path('fos_user_registration_register') }}">Register now and get a discount for NAESM</a>
            <div class="clearfix"></div>
            <a class="banner br349" href="{{ path('summit_abstracts') }}">Submit an abstract to be included in the program!</a>
            <div class="clearfix"></div>
            <!--<a class="banner br415" href="#">Nominate a community member for an well-deserved award!</a>-->
            <div class="clearfix"></div>
            <!--<a class="banner br430" href="#">Make your travel plans!  We look forward to see you in Atlanta!</a>-->
        </section>

        <section class="forms col1of3">

            <article class="reset box">
                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST" class="fos_user_resetting_request">
                    <header>
                        <h1>Reset Password</h1>
                    </header>
                    <div>
                        {% if invalid_username is defined %}
                            <p>{{ 'resetting.request.invalid_username'|trans({'%username%': invalid_username}, 'FOSUserBundle') }}</p>
                        {% endif %}
                        <label for="username">Email:</label>
                        <input type="text" id="username" name="username" required="required" />
                    </div>
                    <div>
                        <input type="submit" class="btn-submit btn-red-146" value="Reset Password"/>
                    </div>
                </form>
            </article>
        </section>
    </main>
